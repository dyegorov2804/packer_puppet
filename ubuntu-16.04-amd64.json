{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "packer-base {{timestamp}}"
    }],
    "provisioners": [
        {
            "type": "shell",
            "scripts": "scripts/common/install-puppet.sh"
        },
        {
            "type": "file",
            "source": "puppet/modules",
            "destination": "/tmp/puppet-modules"
        },
        {
            "type": "file",
            "source": "puppet/manifests",
            "destination": "/tmp/puppet-manifests"
        },
        {
            "type": "shell",
            "inline": [
                "sudo cp -r /tmp/puppet-modules /etc/puppet/modules",
                "sudo cp -r /tmp/puppet-manifests /etc/puppet/manifests",
                "rm -rf /tmp/{puppet-modules,puppet-manifests}"
            ]
        },
        {
            "type": "puppet-masterless",
            "manifest_file": "puppet/manifests/site.pp",
            "execute_command": "sudo -E puppet apply --detailed-exitcodes --debug {{.ManifestFile}}"
        }
    ]
}